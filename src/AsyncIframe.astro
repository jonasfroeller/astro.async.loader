<div class="async-iframe-wrapper">
  <div class="loader-container">
    <div class="loader"></div>
  </div>

  <div class="iframe-container">
    <slot />
  </div>
</div>

<script>
  function setupIframe() {
    const wrapper = document.getElementsByClassName('async-iframe-wrapper')[0];
    const loaderContainer = wrapper.getElementsByClassName('loader-container')[0];
    const iframe = wrapper.querySelector('iframe');
      
    if (iframe && loaderContainer) {
      const handleLoad = () => {
        loaderContainer.classList.add('hidden');
        iframe.removeEventListener('load', handleLoad);
      };
      
      iframe.addEventListener('load', handleLoad);
    }
  }

  if (document.readyState === 'loading') {
    const handleDOMContentLoaded = () => {
      setupIframe();
      document.removeEventListener('DOMContentLoaded', handleDOMContentLoaded);
    };
    
    document.addEventListener('DOMContentLoaded', handleDOMContentLoaded);
  } else {
    setupIframe();
  }
</script>

<style>
  .async-iframe-wrapper {
    position: relative;
    padding-top: 85%;
    height: 0;
    overflow: hidden;
  }
  
  .loader-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }

  .loader {
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    border: 0.125rem solid transparent;
    border-top-color: #3b82f6;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .iframe-container {
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
  }

  :global(iframe) {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    border: 0px;
  }

  .hidden {
    display: none !important;
  }
</style>
